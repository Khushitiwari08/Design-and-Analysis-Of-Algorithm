#include<iostream>
 using namespace std;
 int main(){
      int low,high,mid,n,i,value;
       cout<<"Enter The size of array:";
       cin>>n;
    int arr[n];
     for(i=0;i<n;i++)
      cin>>arr[i];
      cout<<"Enter the Value to be selected:";
      cin>>value;
      low=0; high= n-1;
       mid= (low+high)/2;
      while(low<=high){
        if(arr[mid]< value){
            low= mid+1;
        else if( arr[mid]==value){
          cout<<"Element found at index"<<mid;
        }
         else
          high =mid-1;
         mid=(low+high)/2;
        }
        if(low>high)
          cout<<"Element not found in the list";
      }
       
    return 0;
 }